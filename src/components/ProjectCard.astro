---
interface Props {
  title: string;
  description: string;
  slug: string;
  tags?: string[];
  featured?: boolean;
}

const { title, description, slug, tags = [], featured = false } = Astro.props;
---
<a
  href={`/projects/${slug}`}
  class:list={[
    'group block border border-surface-200 p-6 transition-all hover:border-accent dark:border-surface-800 dark:hover:border-accent',
    featured && 'border-l-3 border-l-accent',
  ]}
>
  {featured && (
    <span class="font-mono text-[0.7em] font-medium uppercase tracking-[0.1em] text-pink">// featured</span>
  )}
  <h3 class="mt-1 text-base font-semibold text-surface-800 group-hover:text-accent dark:text-surface-100 dark:group-hover:text-accent-light transition-colors">
    {title}
  </h3>
  <p class="mt-2 text-sm text-surface-500 dark:text-surface-400 line-clamp-2">
    {description}
  </p>
  {tags.length > 0 && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="border border-accent/30 px-2 py-0.5 font-mono text-[0.7em] font-medium text-accent">
          {tag}
        </span>
      ))}
    </div>
  )}
</a>
