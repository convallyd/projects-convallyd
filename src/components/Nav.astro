---
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Ideas' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---
<nav class="sticky top-0 z-50 border-b border-surface-200 bg-white/80 backdrop-blur-lg dark:border-surface-800 dark:bg-surface-950/80">
  <div class="mx-auto flex max-w-[1100px] items-center justify-between px-6 py-4">
    <a href="/" class="font-mono text-sm font-bold tracking-tight text-accent">
      andyhay<span class="text-pink">_</span>
    </a>

    <div class="flex items-center gap-0.5">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            'px-3 py-1.5 text-sm font-medium transition-colors font-mono',
            currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
              ? 'text-accent border-b-2 border-accent'
              : 'text-surface-500 hover:text-surface-800 dark:text-surface-400 dark:hover:text-surface-200',
          ]}
        >
          {link.label}
        </a>
      ))}
      <div class="ml-2 border-l border-surface-200 pl-2 dark:border-surface-700">
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>
