---
interface Props {
  title: string;
  description: string;
  slug: string;
  date: Date;
  tags?: string[];
}

const { title, description, slug, date, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---
<a
  href={`/blog/${slug}`}
  class="group block border border-surface-200 p-6 transition-all hover:border-pink dark:border-surface-800 dark:hover:border-pink"
>
  <time class="font-mono text-[0.75em] font-medium text-surface-400">
    {formattedDate}
  </time>
  <h3 class="mt-2 text-base font-semibold text-surface-800 group-hover:text-pink dark:text-surface-100 dark:group-hover:text-pink transition-colors">
    {title}
  </h3>
  <p class="mt-2 text-sm text-surface-500 dark:text-surface-400 line-clamp-2">
    {description}
  </p>
  {tags.length > 0 && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="border border-surface-200 px-2 py-0.5 font-mono text-[0.7em] font-medium text-surface-500 dark:border-surface-700 dark:text-surface-400">
          {tag}
        </span>
      ))}
    </div>
  )}
</a>
